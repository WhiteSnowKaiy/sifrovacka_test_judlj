<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.judlj_test_sifrovacka.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <ToggleButton fx:id="picker" mnemonicParsing="false" onAction="#onPickerClick" text="Switch ciphers" />
      <HBox prefHeight="405.0" prefWidth="760.0">
         <children>
            <TextField fx:id="cipher" prefHeight="200.0" prefWidth="400.0" />
            <TextField fx:id="decipher" prefHeight="200.0" prefWidth="400.0" />
         </children>
      </HBox>
      <Button fx:id="encrypt" mnemonicParsing="false" onAction="#onCipherButtonClick" text="Start" />
   </children>
</VBox>
